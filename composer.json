{
    "name": "cyril/project",
    "description": "Projet de fin d'\u0000tude",
    "type": "project",
    "license": "GPL2",
    "authors": [
        {
            "name": "freeonisland",
            "email": "freeonisland@yahoo.fr"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "slevomat/coding-standard": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "behat/behat": "^3.5",
        "codeception/codeception": "^3.1",
        "overtrue/phplint": "^1.1",
        "phpstan/phpstan": "^0.11",
        "nunomaduro/phpinsights": "^1.9",
        "squizlabs/php_codesniffer": "^3.4",
        "phpmd/phpmd": "^2.7",
        "monolog/monolog": "^1.2",
        "jokkedk/webgrind": "^1.6"
    },
    "scripts": {
        "test": "phpunit --bootstrap app/autoload.php unitests --color=always --coverage-html var/coverage --whitelist src",
        "cest": "codecept run --steps",
        "analyse": "phpstan analyse --level max src",
        "cs": "phpcs",
        "fix": "phpcbf",
        "md": "phpmd src text cleancode, codesize, controversial, design, naming, unusedcode",
        "check": "phpcs -p src",
        "insights": "phpinsights"
    },
    "autoload-dev": {
        "psr-4": {
            "": "src/"
        }
    }
}
